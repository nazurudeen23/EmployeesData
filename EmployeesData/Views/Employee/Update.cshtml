
@{
    ViewData["Title"] = "Update";
}


@model Employee;

<h1> Update Employee </h1>

<form method="post">
    <input hidden asp-for="Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Designation"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Designation" />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="DepartmentId"></label>
                </div>
                <div class="col-6">
                    <select asp-for="DepartmentId" asp-items="@ViewBag.myDropdown" class="form-control">
                        <option selected="">--Select--</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="HireDate"></label>
                </div>
                <div class="col-6">
                    <input type="date" asp-for="HireDate" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" value="Update" />
                </div>
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                    </script>
                }
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


